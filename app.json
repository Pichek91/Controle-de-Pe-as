{
  "expo": {
    "name": "Grancoffee Peças",
    "slug": "controle-pecas",
    "version": "1.1.6",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "controlepecas",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "Precisamos acessar a câmera para fotografar as peças.",
        "NSPhotoLibraryUsageDescription": "Precisamos acessar sua galeria para selecionar imagens das peças.",
        "NSPhotoLibraryAddUsageDescription": "Precisamos salvar imagens no seu dispositivo."
      }
    },
    "android": {
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.pichek91.controlepecas",
      "permissions": [
        "CAMERA"
      ]
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/icon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash.png",
          "resizeMode": "cover",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      [
        "expo-build-properties",
        {
          "android": {
            "usesCleartextTraffic": false
          }
        }
      ],
      "expo-web-browser"
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "d356350a-58ef-47d3-a25b-30a64081e98d"
      },
      "env": "prod",
      "apiBaseProd": "https://api.grancoffeepecas.com.br",
      "apiBaseDev": "http://10.0.2.2:3000"
    }
  }
}
